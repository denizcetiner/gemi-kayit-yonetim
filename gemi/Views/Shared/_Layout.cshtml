<!DOCTYPE html>
<html style="height:100%;background-image:url(/Content/wana_bhum-9308663-container_ship-8-140842.jpg);background-size:auto" onload="noBack();">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    <link href="../../Content/lightbox.css" rel="stylesheet" type="text/css" />
    <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
    <script src="~/Scripts/datepicker-tr.js"></script>
    <script src="../../Scripts/myscripts.js" type="text/javascript"></script>
    <script src="../../Scripts/lightbox.js" type="text/javascript"></script>
    <script src="~/Scripts/validation_checkers.js"></script>
    <script src="~/Scripts/validation_dom_change.js"></script>
    <script>
        window.history.forward();
        function noBack() { window.history.forward(); }
    </script>
    <style>
        #ui-datepicker-div
        {
            background-color:gray;
            z-index:5;
        }
        
        .header
        {
            font-size:20px;
        }
        
        .header input
        {
            border-radius:5px;
        }
        
        .header div
        {
            display:inline-block;
            vertical-align:top;
        }
        
        .body
        {
            font-size:20px;
            min-height:100%;
            padding-bottom:100px;
        }
        
        
    </style>

</head>
<body>
<div class="container">
    <div class="header">
        <div class="banner" style="width:40%;height:152px;display:inline-block">
            <img src="../../Content/src/KAPTAN.jpg" />
        </div>
        <div style="width:18%;height:152px;display:inline-block" class="currency">
            @{Html.RenderAction("ShowCurrency","Home");}
        </div>
        <div style="width:18%;height:152px;display:inline-block" class="forecast">
            @{Html.RenderAction("ShowForecast","Home");}
            
        </div>
        <div style="width:22.5%;height:152px;display:inline-block" class="profile">
            @{Html.RenderAction("Account","Home");}
                
        </div>
    </div>
    
    <div style="clear:both"></div>
    
    <div class="body">
    <div class="sidebar" style="width:15%;border:solid black 1px;display:inline-block;min-height:500px;">
        @{Html.RenderAction("SideBar","Home");}
    </div>
    <div class="context" style="width:83%;display:inline-block;border:solid black 1px;padding:0;text-align:center;min-height:500px;">
        @RenderBody()
    </div>
    </div>

    <!--<div class="footer" style="clear:both;background-color:cyan;bottom:0">
        <div>Footer
        </div>
    </div>-->
    
    
    @RenderSection("scripts", required: false)
</div>
</body>
</html>
