@model List<gemi.Entities.Ship>

@{
    ViewBag.Title = "Records";
}

<h2 style="text-decoration:underline">Kayıtlar</h2>

<style>
    p {
        background-color: yellow;
        border-style: groove;
        display: inline-block;
    }
    

    
    .record-content
    {
        /*margin-left:20px;*/
        max-width:90%;
    }
    
    a
    {
        padding-bottom:15px;
    }
</style>

@foreach (gemi.Entities.Ship i in Model)
{
    <div class="record">
    <p class="record-content">Referans no: @i.refId , Gemi adı: @ViewBag.tanimlar[i.shipId] , Hareket zamanı: @i.time.ToString().Remove(10) </p><br />
    @if (i.description != null)
    {
        /*<div class="desc">Açıklama:</div>*/
        <p class="record-content">@i.description</p><br />
    }
    
    <a class="record-content" href="/Gemi/GetShip?ref_id=@i.refId"><button>Gör </button></a>
    <a class="record-content" href="/Gemi/EditShip?ref_id=@i.refId" ><button>Düzenle</button></a><br />
    </div>
}